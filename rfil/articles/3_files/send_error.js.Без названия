//var content = '<div  id="error_dlg" style="position:absolute;border:solid 2px '+border+';display:none;padding:2px;Z-INDEX:1000;LEFT:0;TOP:0;font-size:16px;background-color:'+bgcolor+';">'+text+'</div>';    
